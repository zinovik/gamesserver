{
  "name": "z-games-api",
  "version": "0.1.0",
  "private": false,
  "description": "Back-end part of tiny board games portal",
  "license": "Apache-2.0",
  "repository": "git+ssh://git@github.com:zinovik/z-games-api.git",
  "keywords": [
    "NodeJS",
    "TypeScript",
    "socket.io",
    "NestJS",
    "games",
    "board games"
  ],
  "homepage": "https://github.com/zinovik/z-games-api#readme",
  "author": "Max Zinovik <zinovik@gmail.com>",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.7.3",
    "@nestjs/core": "^5.7.3",
    "@nestjs/microservices": "^5.7.3",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/testing": "^5.7.3",
    "@nestjs/typeorm": "^5.3.0",
    "@nestjs/websockets": "^5.7.3",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.9",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.20",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^11.9.5",
    "@types/passport-google-oauth": "^1.0.39",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "bcrypt": "^3.0.4",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "jsonwebtoken": "^8.5.0",
    "mongodb-memory-server": "^3.1.2",
    "mongoose": "^5.4.16",
    "mongoose-unique-validator": "^2.0.2",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "pg": "^7.8.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.14",
    "typescript": "^3.3.3333",
    "z-games-base-game": "0.0.13",
    "z-games-no-thanks": "0.0.10",
    "z-games-perudo": "0.0.8"
  },
  "devDependencies": {
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "supertest": "^3.4.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
