{
  "name": "z-games-api",
  "version": "0.1.0",
  "private": false,
  "description": "A back-end part of the tiny board games portal",
  "license": "Apache-2.0",
  "repository": "git+ssh://git@github.com:zinovik/z-games-api.git",
  "keywords": [
    "NodeJS",
    "TypeScript",
    "socket.io",
    "NestJS",
    "games",
    "board games"
  ],
  "homepage": "https://github.com/zinovik/z-games-api#readme",
  "author": "Max Zinovik <zinovik@gmail.com>",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "engines": {
    "node": "12.0.0",
    "npm": "6.9.0"
  },
  "dependencies": {
    "@nestjs/common": "^6.2.3",
    "@nestjs/core": "^6.2.3",
    "@nestjs/microservices": "^6.2.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.2.3",
    "@nestjs/platform-socket.io": "^6.2.3",
    "@nestjs/testing": "^6.2.3",
    "@nestjs/typeorm": "^6.1.1",
    "@nestjs/websockets": "^6.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.1",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^12.0.2",
    "@types/nodemailer": "^6.1.0",
    "@types/passport-google-oauth": "^1.0.39",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "cloudinary": "^1.14.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^5.1.2",
    "mongoose": "^5.5.10",
    "mongoose-unique-validator": "^2.0.3",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^6.1.0",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "pug": "^2.0.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.17",
    "typescript": "^3.4.5",
    "z-games-base-game": "^0.0.20",
    "z-games-lost-cities": "^0.0.18",
    "z-games-no-thanks": "^0.0.16",
    "z-games-perudo": "^0.0.15",
    "z-games-six-nimmt": "^0.0.21"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
